<apex:page controller="HomePageController" id="thePage" sidebar="false" showHeader="false" standardStyleSheets="false">
    <apex:form>
        <apex:pageBlock title="cars">
            <!-- <apex:dataTable value="{!cars}" var="car" cellPadding="4" border="1"> -->

            <apex:pageBlockSection columns="2" /> Select color:
            <apex:selectList size="1" value="{!colorPickValue}">
                <apex:actionSupport event="onchange" action="{!getCars}" reRender="table1" />
                <apex:selectOption itemLabel="Black" itemValue="Black"></apex:selectOption>
                <apex:selectOption itemLabel="White" itemValue="White"></apex:selectOption>
                <apex:selectOption itemLabel="Silver" itemValue="Silver"></apex:selectOption>
            </apex:selectList>
            <apex:selectList size="1" value="{!showroomPickValue}">
                <apex:actionSupport event="onchange" action="{!getCars}" reRender="table1" />
                <apex:selectOption itemLabel="Borowaya" itemValue="Borowaya"></apex:selectOption>
                <apex:selectOption itemLabel="Dzerzhinskogo" itemValue="Dzerzhinskogo"></apex:selectOption>
            </apex:selectList>

            <apex:pageBlockTable id="table1" value="{!carsList}" var="car" cellPadding="4" border="1">
                <apex:column>
                    <apex:facet name="header">Name</apex:facet>
                    {!car.Name}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Model</apex:facet>
                    {!car.Model__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Color</apex:facet>
                    {!car.Color__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Price, $</apex:facet>
                    {!car.Price__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Showroom</apex:facet>
                    {!car.Showroom__r.Name}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Owner</apex:facet>
                    {!car.Car_Owner__r.Name}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Details</apex:facet>
                    {!car.Car_Owner__r.Name}
                </apex:column>
            </apex:pageBlockTable>

        </apex:pageBlock>
    </apex:form>
</apex:page>



