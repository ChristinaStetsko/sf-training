<apex:page controller="HomePageController" id="thePage" sidebar="false" showHeader="false" standardStyleSheets="false">
    <apex:form>
        <apex:pageBlock title="Cars">

            <apex:pageBlockSection columns="2" /> Select color:
            <apex:selectList size="1" value="{!colorPickvalue}">
                <apex:actionSupport event="onchange" action="{!getCars}" reRender="table1" />
                <apex:selectOption itemLabel="Black" itemValue="Black"></apex:selectOption>
                <apex:selectOption itemLabel="White" itemValue="White"></apex:selectOption>
                <apex:selectOption itemLabel="Yellow" itemValue="Yellow"></apex:selectOption>
            </apex:selectList>
            <apex:pageBlockSection columns="2" /> Select price:
            <apex:selectList size="1" value="{!colorPickvalue}">
                <apex:actionSupport event="onchange" action="{!getCars}" reRender="table1" />
                <apex:selectOption itemLabel="< 10'000$" itemValue="Black"></apex:selectOption>
                <apex:selectOption itemLabel="10'000$-20'000$" itemValue="White"></apex:selectOption>
                <apex:selectOption itemLabel=">20'000$" itemValue="White"></apex:selectOption>
            </apex:selectList>

            <apex:pageBlockTable id="table1" value="{!carList}" var="car" cellPadding="4" border="1">
                <apex:column>
                    <apex:facet name="header">Name</apex:facet>
                    {!car.Name}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Model</apex:facet>
                    {!car.Model__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Color</apex:facet>
                    {!car.Color__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Price, $</apex:facet>
                    {!car.Price__c}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Showroom</apex:facet>
                    {!car.Showroom__r.Name}
                </apex:column>
                <apex:column>
                    <apex:facet name="header">Owner</apex:facet>
                    {!car.Car_Owner__r.Name}
                </apex:column>
            </apex:pageBlockTable>

        </apex:pageBlock>
    </apex:form>
</apex:page>



